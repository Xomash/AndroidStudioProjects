<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.z1kses.elimination.MainActivity">

    <ImageButton
        android:background="#FFFFFF"
        android:padding="10sp"
        android:layout_width="145sp"
        android:layout_height="145sp"
        android:id="@+id/v1"
        android:onClick="select"
        android:layout_below="@+id/v4"
        android:layout_alignLeft="@+id/v4"
        android:layout_alignStart="@+id/v4" />

    <ImageButton
        android:background="#FFFFFF"
        android:padding="10sp"
        android:onClick="select"
        android:layout_width="145sp"
        android:layout_height="145sp"
        android:id="@+id/v2"
        android:layout_alignTop="@+id/v4"
        android:layout_toRightOf="@+id/v1"
        android:layout_toEndOf="@+id/v1" />

    <ImageButton
        android:background="#FFFFFF"
        android:padding="10sp"
        android:onClick="select"
        android:layout_width="145sp"
        android:layout_height="145sp"
        android:id="@+id/v3"
        android:layout_below="@+id/v2"
        android:layout_toRightOf="@+id/v1"
        android:layout_toEndOf="@+id/v1" />

    <ImageButton
        android:background="#FFFFFF"
        android:padding="10sp"
        android:onClick="select"
        android:layout_width="145sp"
        android:layout_height="145sp"
        android:id="@+id/v4"
        android:layout_below="@+id/timerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00"
        android:id="@+id/timerText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ходів: 10"
        android:id="@+id/stepText"
        android:layout_alignTop="@+id/timerText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
